@*
    Admin's Layout
*@

<!DOCTYPE html>
<html lang="tr">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/lib/Template/theme/content/test.css" rel="stylesheet" />
    <link href="~/lib/Template/theme/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/lib/admin-front-packs/dist/css/styles.css" rel="stylesheet" />
    <link href="~/lib/css/abz-stylesheet.css" rel="stylesheet" />

    <title>abz | En iyisi</title>
    <link href="~/img/favicon_transparent.ico" rel="icon" type="image/x-icon" />

</head>


<body>
    <partial name="NavbarPartial" />

    <div class="container" style="width:80%; margin:0 auto">
        <div class="row" style="margin-top:50px">
            <div class="col-md-3 text-center">

                <div class="filter filter-first">
                    <div class="mt-2 mb-4">
                        <div class="custom-control custom-checkbox" style="padding:0; margin:0">
                            <img src="~/img/default_admin.png" class="rounded-circle img-fluid img-thumbnail">
                        </div>
                    </div>

                    <div class="mt-2 mb-2">
                        <div class="custom-control custom-checkbox" style="padding:0">
                            <a class="btn btn-primary" asp-controller="Home" asp-action="Index" style="width:80%"><i class="fa fa-circle-o"></i> Kontrol Paneli</a>
                        </div>
                    </div>

                    <div class="mt-2 mb-2">
                        <div class="custom-control custom-checkbox" style="padding:0">
                            <a class="btn btn-primary" asp-controller="Operations" asp-action="Product" style="width:80%"><i class="fa fa-product-hunt"></i> Ürün İşlemleri</a>
                        </div>
                    </div>

                    <div class="mt-2 mb-2">
                        <div class="custom-control custom-checkbox" style="padding:0">
                            <a class="btn btn-primary" asp-controller="Operations" asp-action="Category" style="width:80%"><i class="fa fa-book"></i> Kategori İşlemleri</a>
                        </div>
                    </div>

                    <div class="mt-2 mb-2">
                        <div class="custom-control custom-checkbox" style="padding:0">
                            <a class="btn btn-primary" asp-controller="Operations" asp-action="Customer" style="width:80%"><i class="fa fa-user-circle"></i> Kullanıcı İşlemleri</a>
                        </div>
                    </div>

                </div>


                <div class="filter filter-last">
                    <div class="mt-2 mb-2">
                        <div class="custom-control custom-checkbox" style="padding:0">
                            <a href="../../account/logout" class="btn btn-danger" style="width:80%"><i class="fa fa-hourglass-end"></i> Oturumu Kapat</a>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-9" style="border: solid 1px lightgray; border-radius: 7px; padding-top:30px; margin-bottom:50px">

                @RenderBody()

            </div>
        </div>
    </div>

    @RenderSection("scripts", false)
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/admin-front-packs/dist/js/scripts.js"></script>


    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/admin-front-packs/dist/assets/demo/datatables-demo.js"></script>

    <partial name="FooterPartial" />

</body>

</html>
