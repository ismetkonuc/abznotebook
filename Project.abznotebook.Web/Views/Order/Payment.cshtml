@model PaymentViewModel

@{
    Layout = "_OrderLayout";
}

<div class="left border">
    <div class="row">
        <h4>Ödeme</h4>
        <div class="icons"> <img src="https://img.icons8.com/color/48/000000/visa.png" /> <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png" /> <img src="https://img.icons8.com/color/48/000000/maestro.png" /> </div>
    </div>

    <form asp-action="Payment" method="post">
        <div class="form-group">
            <span asp-validation-for="Cardholder" class="text-danger"></span>
            <span>Kart Sahibi:</span>
            <input asp-for="Cardholder" class="form-control" placeholder="Mehmet Ertürk">
        </div>

        <div class="form-group">
            <span asp-validation-for="CardNumber" class="text-danger"></span>
            <span>Kart Numarası:</span>
            <input asp-for="CardNumber" class="form-control" placeholder="4444 6780 4567 9909">
        </div>

        <div class="row">
            <div class="col-4 form-group">
                <span asp-validation-for="ExpiredMonth" class="text-danger"></span>
                <span>Yıl:</span>
                <input type="text" placeholder="Ay" asp-for="ExpiredMonth" class="form-control">
            </div>
            <div class="col-4 form-group">
                <span asp-validation-for="ExpiredYear" class="text-danger"></span>
                <span>Yıl:</span>
                <input type="text" placeholder="Yıl" asp-for="ExpiredYear" class="form-control">
            </div>
            <div class="col-4 form-group">
                <span asp-validation-for="CVV" class="text-danger"></span>
                <span>CVV:</span>
                <input asp-for="CVV" class="form-control">
            </div>

            <div class="form-group">
                <input type="text" asp-for="AddressId" class="form-control" hidden />
            </div>

            <div class="form-group">
                <input type="text" asp-for="ShipperId" class="form-control" hidden />
            </div>
        </div>

        <a asp-area="" asp-controller="Order" asp-action="Delivery" class="btn btn-info" style="width: 200px">Önceki Sayfa</a>
        <button class="btn btn-success" type="submit" style="width: 200px">Ödemeyi Yap</button>
    </form>
</div>


@section Sidebar
{
    <partial name="OrderSummaryPartial" model="@Model.OrderSummary" />
}
