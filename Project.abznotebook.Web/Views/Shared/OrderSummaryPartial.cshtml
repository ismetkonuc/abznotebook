@using Project.abznotebook.Web.Pages
@model OrderSummarySidebarViewModel

@*@{
        var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    }*@

<div class="container m-4 p-5" style="border: solid 1px lightgray; border-radius: 7px;">
    <h4>Sepet Özeti</h4>
    <br/>
    <p>@Model.ProductSummaries.Count Ürün</p>
    
    @foreach (var item in @Model.ProductSummaries)
    {
        <div class="row item">
            <div class="col-4 align-self-center"><img class="img-fluid" src="~/img/@item.ProductImg"></div>
            <div class="col-8">
                <div class="row"><b>@item.ProductPrice.ToString("C")</b></div>
                <div class="row text-muted">@item.ProductName</div>
                <div class="row">Adet: @item.ProductQuantity</div>
            </div>
        </div>
        <hr/>
    }

    <div class="row lower">
        <div class="col text-left">Kargo</div>
        <div class="col text-right">Ücretsiz</div>
    </div>
    <div class="row lower">
        <div class="col text-left"><b>Ödenecek Tutar</b></div>
        <div class="col text-right"><b>@Model.TotalPrice.ToString("C")</b></div>
    </div>
    <div class="row lower">
    </div>
</div>