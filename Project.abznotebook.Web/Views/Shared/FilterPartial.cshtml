@using Project.abznotebook.Web.Pages
@model FilterViewModel

@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    var actionName = this.ViewContext.RouteData.Values["action"].ToString();
}

<div class="col-md-3">
    <div class="filter filter-first">
        <h6 class="font-weight-bold">MARKA</h6>

        @foreach (var vendor in Model.Vendors)
        {
            <div class="mt-2 mb-2 pl-2">
                <a class="custom-control custom-checkbox" asp-controller="@controllerName" asp-action="@actionName" asp-route-vendorFilter="@vendor">@vendor</a>
            </div>
        }
        <hr />
        @foreach (var memory in Model.Memories)
        {
            <div class="mt-2 mb-2 pl-2">
                <a class="custom-control custom-checkbox" asp-controller="@controllerName" asp-action="@actionName" asp-route-memoryFilter="@memory">@memory</a>
            </div>
        }

    </div>
</div>