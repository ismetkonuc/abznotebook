@using Project.abznotebook.Web.Pages
@model FilterViewModel

@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    var actionName = this.ViewContext.RouteData.Values["action"].ToString();
    string active = TempData["Active"]?.ToString();

}


<form class="col-md-3" id="form1" method="get" asp-controller="@controllerName" asp-action="@actionName">

    <div class="filter filter-first">
        <input hidden asp-for="SelectedVendor" />
        <a asp-action="@actionName" asp-controller="@controllerName" class="btn btn-lg btn-block btn-warning my-2">MARKA</a>

        <div class="my-2 p-3">
            @foreach (var vendor in Model.Vendors)
            {
                <div class="my-2">
                    <button type="submit" value="@vendor" class="btn btn-outline-danger btn-block @(active == vendor ? "active":"")" onclick="addSelectedVendor(this)">@vendor</button>
                </div>
            }
        </div>

    </div>
</form>
