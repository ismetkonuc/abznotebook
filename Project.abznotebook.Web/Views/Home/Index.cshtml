@model ProductListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}


@section sort
{
    <a class="btn btn-primary btn-order" asp-controller="Home" asp-action="Index" asp-route-sortOrder="best_match">En İyi Eşleşme</a>
    <a class="btn btn-primary btn-order" asp-controller="Home" asp-action="Index" asp-route-sortOrder="asc_price">Artan Fiyat</a>
    <a class="btn btn-primary btn-order" asp-controller="Home" asp-action="Index" asp-route-sortOrder="desc_price">Azalan Fiyat</a>
}

@section filter
{
    <partial name="FilterPartial" model="@Model.FilterTypes" />
}

<div class="container" style="margin:0; padding:0; text-align:center; border-bottom:1px solid lightgray">
    <div class="row text-center">
        @foreach (var product in Model.Products)
        {
            <partial name="ProductSummary" model="product" />
        }
    </div>
</div>



<partial name="PaginationPartial" model="@Model.PagingInfo" />