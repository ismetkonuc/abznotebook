@model AppUserAddViewModel
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
<form class="w-50 mx-auto p-4 mt-3 shadow" asp-action="Register">

        <div class="form-group">
            <label>Ad</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label>Soyad</label>
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input asp-for="Surname" class="form-control" />
        </div>

        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" class="form-control" />
        </div>

        <div class="form-group">
            <label>Şifre Tekrar</label>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            <input asp-for="PasswordConfirm" class="form-control" />
        </div>

        <div class="form-group">
            <label>E-Mail</label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" />
        </div>

        <input type="submit" class="btn btn-outline-success" value="Kayıt Ol" />
        <a asp-action="Login" class="btn btn-link">Giriş Yap</a>
    </form>
</body>
</html>
