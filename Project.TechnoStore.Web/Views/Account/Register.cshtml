@model AppUserAddViewModel
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>abz | Kayıt Ol</title>
</head>
<body>

    <div class="container">
        <div class="row my-4">
            <div class="col-md-4 offset-md-4 my-4">
                <form asp-action="Register">
                    <div class="card card-default shadow">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-3">
                                    <h3>
                                        <span class="fa fa-user-plus fa-3x"></span>
                                    </h3>
                                </div>
                                <div class="col-md-9 text-right">
                                    <h2> Kayıt Ol</h2>
                                    <small>
                                        Gerekli yerleri doldurunuz.
                                    </small>

                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input asp-for="Name" class="form-control" placeholder="Ad" />
                            </div>

                            <div class="form-group">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                                <input asp-for="Surname" class="form-control" placeholder="Soyad" />
                            </div>

                            <div class="form-group">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı" />
                            </div>

                            <div class="form-group">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" class="form-control" placeholder="Şifre" />
                            </div>

                            <div class="form-group">
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                <input asp-for="PasswordConfirm" class="form-control" placeholder="Şifre tekrar" />
                            </div>

                            <div class="form-group">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" class="form-control" placeholder="E-posta adresi" />
                            </div>
                        </div>

                        <div class="card-footer text-muted">
                            <button class="btn btn-success" type="submit">
                                Kayıt Ol
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>




