@model UserLoginViewModel
@{
    Layout = "_AccountLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form class="w-50 mx-auto p-4 mt-3 shadow" asp-action="Login">

        <div class="form-group">
            <label asp-for="UserName">Kullanıcı Adı</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="UserName">Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" class="form-control"/>
        </div>
        
        <input type="submit" class="btn btn-outline-success" value="Giriş Yap"/>
        <a asp-action="Register" class="btn btn-link">Kayıt Ol</a>
    </form>
</body>
</html>
