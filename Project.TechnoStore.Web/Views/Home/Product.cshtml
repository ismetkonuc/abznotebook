@model Product
@{
    Layout = "_ProductLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Name - TechnoStore</title>
</head>
<body>
<div class="super_container">
    <div class="single_product">
        <div class="container-fluid" style=" background-color: #fff; padding: 11px;">
            <div class="row">
                <div class="col-lg-2 order-lg-1 order-2">
                    <ul class="image_list">
                        <li data-image="~/img/@Model.Image1"><img src="~/img/@Model.Image1" alt=""></li>
                        <li data-image="~/img/@Model.Image2"><img src="~/img/@Model.Image2" alt=""></li>
                        <li data-image="~/img/@Model.Image3"><img src="~/img/@Model.Image3" alt=""></li>
                    </ul>
                </div>
                <div class="col-lg-4 order-lg-2 order-1">
                    <div class="image_selected"><img src="~/img/@Model.Image1" alt=""></div>
                </div>
                <div class="col-lg-6 order-3">
                    <div class="product_description">

                        <div class="product_name">@Model.Name</div>
                        <div class="product-rating">
                            <span class="badge badge-danger"><i class="fa fa-star"></i> Popüler</span>
                            <span class="badge badge-warning"><i class="fa fa-shipping-fast"></i> Ücretsiz Kargo</span>

                        </div>

                        <div>
                            <span class="product_price">@Model.UnitPrice.ToString("C")</span> <strike class="product_discount"> <span style='color: black'>XX.XXX</span> </strike>
                        </div>

                        <div>
                            <span class="product_saved">Kazancınız:</span> <span style='color: black'>#</span>
                        </div>

                        <hr class="singleline">
                        <div>
                            <span class="product_info">Ücretsiz Kargo</span><br> <span class="product_info">2 Yıl Garanti</span><br> <span class="product_info">Kolay İade</span><br>
                        </div>
                        <div>
                            <div class="row" style="margin-top: 15px;">
                                <div class="col-xs-6" style="margin-left: 15px;"> <span class="product_options">Bellek</span><br> <button class="btn btn-primary btn-sm">@Model.MemoryCapacity</button>  </div>
                                <div class="col-xs-6" style="margin-left: 55px;"> <span class="product_options">Depolama</span><br> <button class="btn btn-primary btn-sm">@Model.DiscCapacity</button> </div>
                            </div>
                        </div>
                        <hr class="singleline">
                        <div class="order_info d-flex flex-row">
                            <form action="#"> </form>
                        </div>
                        <div class="row">
                            <div class="col-xs-6" style="margin-left: 13px;">
                                <div class="product_quantity">
                                    <span>Adet: </span> <input id="quantity_input" type="text" pattern="[0-9]*" value="1">
                                    <div class="quantity_buttons">
                                        <div id="quantity_inc_button" class="quantity_inc quantity_control"><i class="fas fa-chevron-up"></i></div>
                                        <div id="quantity_dec_button" class="quantity_dec quantity_control"><i class="fas fa-chevron-down"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" class="btn btn-outline-success">Sepete Ekle</button> <button type="button" class="btn btn-outline-primary">Satın Al</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-underline">
                <div class="col-md-6"> <span class=" deal-text">Ürün Özellikleri</span> </div>
                <div class="col-md-6"> <a href="#" data-abc="true"> <span class="ml-auto view-all"></span> </a> </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="col-md-12">
                        <tbody>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Marka :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.Vendor</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Model:</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li> @Model.Name </li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">İşlemci Markası :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.ProcessorVendor</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">İşlemci :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.ProcessorType @Model.ProcessorType</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Ekran Kartı :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.GraphicsCard</li>
                                </ul>
                            </td>
                        </tr>
                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Bellek Kapasitesi:</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.MemoryCapacity</li>
                                </ul>
                            </td>
                        </tr>

                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Disk Kapasitesi :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.DiscCapacity</li>
                                </ul>
                            </td>
                        </tr>

                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">SKU :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.SKU.Substring(0,8).ToUpper()</li>
                                </ul>
                            </td>
                        </tr>

                        <tr class="row mt-10">
                            <td class="col-md-4"><span class="p_specification">Açıklama :</span> </td>
                            <td class="col-md-8">
                                <ul>
                                    <li>@Model.Description</li>
                                </ul>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>