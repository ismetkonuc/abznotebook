@model AddCategoryViewModel
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_StandartLayout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <div class="row">

            <div class="col-md-6 mt-2">
                <div class="card bg-warning text-white mb-4">
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" asp-controller="Operations" asp-action="UpdateCategory">Kategori Güncelle</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mt-2">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" asp-controller="Operations" asp-action="DeleteCategory">Kategori Sil</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="dropdown-divider"></div>

<h1 class="mt-4 text-center">Kategori Ekle</h1>

<form class="w-75 mx-auto p-3" method="post" asp-action="AddCategory">

    <div class="form-group">
        <label asp-for="Name">Ad</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Tanım</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-success">Ekle</button>

</form>