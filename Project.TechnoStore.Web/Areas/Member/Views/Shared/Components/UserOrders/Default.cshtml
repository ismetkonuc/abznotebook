@model List<OrderDetailViewModel>


<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Sipariş Tarihi</th>
                <th>Sipariş Numarası</th>
                <th>Alıcı</th>
                <th>Ödenen Tutar</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {


                <tr>
                    <td>@order.OrderDate.ToString("M") @order.OrderDate.Year - @order.OrderDate.ToString("t")</td>
                    <td>#@order.OrderId</td>
                    <td>@order.CustomerFullName</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Order" asp-action="Detail" asp-route-orderId="@order.OrderId">
                            Sipariş Detayı
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>